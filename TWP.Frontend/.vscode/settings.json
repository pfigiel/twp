{
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "stylelint.validate": ["css", "sass", "scss"],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "cSpell.words": [
        "Identicon",
        "TTFB",
        "browserslist",
        "chromeframe",
        "dtos",
        "fontawesome",
        "formik",
        "fortawesome",
        "healthcheck",
        "identicons",
        "immer",
        "mixins",
        "rerender",
        "stylelint",
        "testid",
        "trivago",
        "typesafe",
        "unmount"
    ]
}
